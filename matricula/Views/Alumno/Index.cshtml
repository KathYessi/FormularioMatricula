{@Model matricula.Models.Alumno
    ViewData["Title"] = "Home Page";
    @{


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

<div class="container">
    <div class="row">
        <div class="col-4">
            <form asp-controller="apellidos" asp-action="Vender">
                <div class="mb-3">
                    <label asp-for="apellidos" class="form-label">Nombre del producto</label>
                    <input asp-for="apellidos" type="text" class="form-control">
                </div>
                  <div class="col-4">
            <form asp-controller="nombre" asp-action="Vender">
                <div class="mb-3">
                    <label asp-for="nombre" class="form-label">Nombre del producto</label>
                    <input asp-for="nombre" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="fechanacimiento" class="form-label">Cantidad</label>
                    <input asp-for="fechanacimiento" type="number" class="form-control" placeholder="Ingrese la cantidad">
                </div>
                <div class="mb-3">
                    <label asp-for="dni" class="form-label">Precio</label>
                    <input asp-for="dni" type="number" class="form-control" placeholder="Ingrese el precio">
                </div>
                 <div class="form-group">
                        <label for="">Genero</label>
                        <select name="motivo" id="" class="form-control">
                            <option value="Queja">Femenino</option>
                            <option value="Reclamo">Masculino</option>
                            </option>
                        </select>
                    </div>
                <button type="submit" class="btn btn-success">Vender</button>
            </form>
            <h1>@ViewData["Message"]</h1>
        </div>
    </div>
</div>
</div>
